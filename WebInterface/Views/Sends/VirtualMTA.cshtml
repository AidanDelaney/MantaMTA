@{
	ViewBag.Title = Model.SendID + " > Virtual MTA";
	Layout = "~/Views/Sends/_ReportLayout.cshtml";
}
							
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>VirtualMTA</th>
			<th class="td-align-right">Accepted</th>
			<th class="td-align-right">Accepted %</th>
			<th class="td-align-right">Rejected</th>
			<th class="td-align-right">Rejected %</th>
			<th class="td-align-right">Throttled %</th>
			<th class="td-align-right">Deferred %</th>
		</tr>
	</thead>
	<tbody>
		@foreach (WebInterfaceLib.BO.VirtualMtaSendInfo vmta in Model.VirtualMtaSendInfo)
		{
			<tr>
				<td>@vmta.Hostname<br /><small>@vmta.IPAddress</small></td>
				<td class="td-align-right stat-green">@vmta.Accepted.ToString("N0")</td>
				<td class="td-align-right stat-green">@vmta.AcceptedPercent.ToString("N2")%</td>
				<td class="td-align-right stat-red">@vmta.Rejected.ToString("N0")</td>
				<td class="td-align-right stat-red">@vmta.RejectedPercent.ToString("N2")%</td>
				<td class="td-align-right stat-grey">@vmta.ThrottledPercent.ToString("N2")%</td>
				<td class="td-align-right stat-blue">@vmta.DeferredPercent.ToString("N2")%</td>
			</tr>
		}
	</tbody>
</table>