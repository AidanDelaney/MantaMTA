@{
    ViewBag.Title = "Virtual MTA";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Virtual MTAs&nbsp;<a href="javascript:void(0);" class="btn btn-primary btn-mini"><i class="icon-plus icon-white"></i></a></h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Hostname</th>
			<th>IP Address</th>
			<th>Accepts Inbound</th>
			<th>Send Outbound</th>
			<th class="text-success">Accepted</th>
			<th class="text-error">Rejected</th>
			<th>Throttled</th>
			<th class="text-info">Deferred</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (WebInterface.Models.VirtualMTASummary vmta in Model.VirtualMTASummaryCollection)
		{
			<tr>
				<td>@vmta.IpAddress.Hostname</td>
				<td>@vmta.IpAddress.IPAddress</td>
				<td>@vmta.IpAddress.IsSmtpInbound</td>
				<td>@vmta.IpAddress.IsSmtpOutbound</td>
				<td class="text-success">@vmta.Accepted.ToString("N0")</td>
				<td class="text-error">@vmta.Failed.ToString("N0")</td>
				<td>@vmta.ThrottledPercent.ToString("N2")%</td>
				<td class="text-info">@vmta.DeferredPercent.ToString("N2")%</td>
				<td>
					<div class="btn-group pull-right">
						<a href="javascript:alert('Not implemented');" class="btn btn-primary btn-mini">Edit</a>
						<a href="javascript:void(0);" class="btn btn-danger btn-mini"><i class="icon-trash icon-white"></i></a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

<h2>Virtual MTA Groups&nbsp;<a href="javascript:void(0);" class="btn btn-primary btn-mini"><i class="icon-plus icon-white"></i></a></h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Virtual MTAs</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (MantaMTA.Core.MtaIpAddress.MtaIPGroup ipGroup in Model.IpGroups)
		{
			<tr>
				<td>@ipGroup.Name</td>
				<td>@ipGroup.Description</td>
				<td>@string.Join("<br/>", (from ip in ipGroup.IpAddresses select ip.Hostname).ToArray())</td>
				<td>
					<div class="btn-group pull-right">
						<a href="javascript:alert('Not implemented');" class="btn btn-primary btn-mini">Edit</a>
						<a href="javascript:void(0);" class="btn btn-danger btn-mini"><i class="icon-trash icon-white"></i></a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>


